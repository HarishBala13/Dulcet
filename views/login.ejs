    <body>
          <div class="login">
          <form class="form" action="" method="post" onsubmit="return submitvalidate()">
          <h2 id="h2">Login with</h2>
            <nav>
              <div class="a"><a href="https://www.facebook.com/varunkavier.kavier"><i class="fab fa-facebook-f"></i></a></div>
              <div class="a"><a href="https://www.instagram.com/__delcet__23/"  target="_blank"><i class="fab fa-instagram"></i></a></div>
              <div class="a"> <a href="https://twitter.com/DelcetMusicHB"><i class="fab fa-twitter"></i></a></div>
            </nav>
          <label>Email : </label>
          <input type="text" placeholder="Enter your email" id="email" name="email" onkeyup="emailerror()">
          <small id="error1">Error Message</small>
        
          <label>Password : </label>
          <input type="password" placeholder="Enter your password" id="set_password" name="set_password" onkeyup="spasserror()">
          <small id="error2">Error Message</small> 
        
          <a class="password" href="/forgotpass">Forgot password?</a>
          <button type="submit">Login</button>
        
          <p class="registername">Don't have an account?&nbsp;
          <a class="newaccount" href="/register">Create One</a></p>
          </form>
          </div>
          <script>
          const email=document.getElementById("email");
          const spass=document.getElementById("set_password");
          const error1=document.getElementById("error1");
          const error2=document.getElementById("error2");
          var count=0;
          function emailerror(){
        const email1=email.value;
        const regExp = /^(([^<>()[\]\.,;:\s@\"]+(\.[^<>()[\]\.,;:\s@\"]+)*)|(\".+\"))@(([^<>()[\]\.,;:\s@\"]+\.)+[^<>()[\]\.,;:\s@\"]{2,})$/i;
        if(email1==""){
          error1.innerHTML="This Field should'nt be empty";
          error1.style.visibility="visible";
          email.style.border="2px solid red";
        }
        else if(!(regExp.test(email1))){
          email.style.border="2px solid red";
          error1.style.visibility="visible";
          error1.innerHTML="Invalid! Please provide proper Email";
      }
      else{
        error1.style.visibility="hidden";
        email.style.border="2px solid green";
        count++;
      }
    }
    
    function spasserror(){
      const spass1=spass.value;
        if(spass1==''){
        error2.innerHTML="This Field should'nt be empty";
        error2.style.visibility="visible";
        spass.style.border="2px solid red";
      }
      else if(spass1.length<=4){
        error2.innerHTML="Weak Password need to update";
        error2.style.visibility="visible";
        spass.style.border="2px solid red";
        }
        else if(spass1.length<=6){
        error2.innerHTML="Medium Password need to update";
        error2.style.visibility="visible";
        spass.style.border="2px solid red";
        }
        else{
            error2.style.visibility="hidden";
        spass.style.border="2px solid green";
        count++;
        } 
    }
    
    function submitvalidate(){
      if(count>2) return true;
      else return false;
    }
        </script>
