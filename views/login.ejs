}
.form nav{
  display: flex;
  gap: 35px;
  margin-left: 170px;
  padding: 10px;
}
.form p{
  color: red;
  font-size: medium;
}
.form label{
  display: block;
  font-size: large;
  width: 100%;
  /* margin-left: 30px; */
  padding: 10px;
  font-weight: bolder;
  padding-bottom: 20px;
  padding: 20px;
