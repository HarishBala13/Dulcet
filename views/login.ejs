  color: black;
  font-size: large;
  font-weight: bolder;
  /* margin-left: 30px; */
  padding-bottom: 20px;
  padding: 20px;
}
.form .newaccount{
  color: black;
  text-decoration: none;
  font-weight: 100;
  padding-bottom: 20px;
}
.form .newaccount:hover, .form .password:hover{
  color: blueviolet;
  text-decoration: underline;
  cursor: pointer;
}
.error{
  color:red;
  font-weight: bold;
  font-size: large;
